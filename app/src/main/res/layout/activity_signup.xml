<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="185dp"
        android:layout_height="19dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/alice"
        android:text="Email Id/ Username:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sadress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sNumber"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="134dp"
        android:layout_height="17dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/alice"
        android:text="Contact Number:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sPassword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="83dp"
        android:layout_height="17dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/alice"
        android:text="Password:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sname" />

    <EditText
        android:id="@+id/sname"
        android:layout_width="225dp"
        android:layout_height="33dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Name"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sPassword"
        android:layout_width="231dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Password"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sname" />

    <EditText
        android:id="@+id/sNumber"
        android:layout_width="231dp"
        android:layout_height="33dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Number"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sPassword" />

    <EditText
        android:id="@+id/sadress"
        android:layout_width="236dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Email Id will your username"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sNumber" />

    <Button
        android:id="@+id/ssignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:text="Sign Up!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/slogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:fontFamily="@font/alice"
        android:text="Sign in"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:fontFamily="@font/alice"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="17dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/alice"
        android:text="Name:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>